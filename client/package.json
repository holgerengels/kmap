{
  "scripts": {
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:legacy": "karma start --legacy --coverage",
    "test:legacy:watch": "karma start --legacy --auto-watch=true --single-run=false",
    "test:bs": "karma start karma.bs.config.js --legacy --coverage",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "cd dist && es-dev-server --open",
    "watch:build": "rimraf dist && rollup --watch -c rollup.config.js & http-server dist -o -c-1",
    "start": "es-dev-server --app-index index.html --node-resolve --watch --open"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@open-wc/building-rollup": "^0.9.0",
    "@open-wc/eslint-config": "^0.4.1",
    "@open-wc/prettier-config": "^0.1.12",
    "@open-wc/testing": "^0.11.1",
    "@open-wc/testing-karma": "^2.0.11",
    "@open-wc/testing-karma-bs": "^1.2.15",
    "eslint-plugin-lit": "^1.2.0",
    "http-server": "^0.11.1",
    "husky": "^1.0.0",
    "lint-staged": "^8.2.1",
    "owc-dev-server": "^0.3.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.27.2",
    "rollup-plugin-cpy": "^2.0.0",
    "rollup-plugin-workbox": "^4.0.0",
    "webpack-merge": "^4.2.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "kmap-main",
  "license": "MIT",
  "dependencies": {
    "@material/mwc-button": "^0.10.0",
    "@material/mwc-dialog": "^0.10.0",
    "@material/mwc-drawer": "^0.10.0",
    "@material/mwc-fab": "^0.10.0",
    "@material/mwc-formfield": "^0.10.0",
    "@material/mwc-icon-button": "^0.10.0",
    "@material/mwc-slider": "^0.10.0",
    "@material/mwc-snackbar": "^0.10.0",
    "@material/mwc-textarea": "^0.10.0",
    "@material/mwc-textfield": "^0.10.0",
    "@material/mwc-top-app-bar": "^0.10.0",
    "@material/mwc-top-app-bar-fixed": "^0.10.0",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2",
    "mega-material": "1.0.0-alpha.2",
    "pwa-helper-components": "^0.2.1",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "web-animations-js": "^2.3.2"
  }
}
